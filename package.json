{
  "name": "@naturacosmeticos/natds-rn",
  "version": "0.0.0-development",
  "license": "MIT",
  "main": "lib/index.js",
  "author": {
    "name": "Douglas Freitas",
    "email": "douglasfreitas@natura.net",
    "url": "https://github.com/douglasofreitas"
  },
  "description": "Natura Design System for React Native",
  "homepage": "https://github.com/natura-cosmeticos/natds-rn",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "react-native start",
    "start:clear": "react-native start --reset-cache",
    "test": "jest --collectCoverage",
    "test:clean": "jest --update-snapshot",
    "ios:5": "react-native run-ios --simulator=\"iPhone 5s\"",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "storybook": "start-storybook -p 7007",
    "cm": "git-cz",
    "release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "dependencies": {
    "@naturacosmeticos/natds-icons": "^0.4.0",
    "jest-styled-components": "^6.3.1",
    "prop-types": "^15.7.2",
    "react-native-gesture-handler": "^1.5.2",
    "react-native-svg": "^11.0.1",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@naturacosmeticos/eslint-config-natura": "^2.0.1",
    "@react-native-community/eslint-config": "^0.0.5",
    "@storybook/addon-actions": "^5.2.1",
    "@storybook/addon-links": "^5.2.1",
    "@storybook/addons": "^5.2.1",
    "@storybook/react-native": "^5.2.1",
    "@storybook/react-native-server": "^5.2.1",
    "babel-cli": "^6.26.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-preset-react-native": "^1.9.2",
    "cz-conventional-changelog": "3.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-react": "^7.12.4",
    "fs-extra": "^8.1.0",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "metro-react-native-babel-preset": "^0.56.0",
    "react": "16.9.0",
    "react-dom": "16.8.3",
    "react-native": "^0.61.4",
    "react-native-svg-transformer": "^0.14.3",
    "react-test-renderer": "16.9.0",
    "semantic-release": "^17.0.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.10"
  },
  "jest": {
    "preset": "react-native",
    "testMatch": [
      "<rootDir>/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "setupFiles": [
      "<rootDir>/test-setup.js"
    ],
    "moduleNameMapper": {
      "\\.svg": "<rootDir>/__mocks__/svgMock.js"
    },
    "collectCoverageFrom": [
      "<rootDir>/lib/**/*.js",
      "!<rootDir>/lib/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 55,
        "functions": 70,
        "lines": 75,
        "statements": 75
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
